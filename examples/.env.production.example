# Copy this file to .env and customize for your production environment

# Domain Configuration
DOMAIN=homeserver.local
EMAIL=admin@homeserver.local

# SSL/TLS Configuration
ACME_EMAIL=admin@homeserver.local
ACME_DOMAINS=homeserver.local,*.homeserver.local

# Database Configuration
POSTGRES_PASSWORD=secure_password_here
MYSQL_ROOT_PASSWORD=mysql_root_password_here
REDIS_PASSWORD=redis_password_here

# Mail Configuration
MAILER_HOST=smtp.gmail.com
MAILER_PORT=587
MAILER_USERNAME=your_email@gmail.com
MAILER_PASSWORD=your_app_password
MAILER_FROM_NAME=Your Name
MAILER_FROM_EMAIL=your_email@gmail.com

# Security
HTPASSWD_ADMIN=admin:$2y$10$yJQQT1...$_HASH_HERE
HASH=$2y$10$yJQQT1...$_HASH_HERE

# Timezone
TZ=Europe/Berlin

# Container Limits
POSTGRES_MEMORY=256m
NGINX_MEMORY=128m
TRAEFIK_MEMORY=128m
REDIS_MEMORY=128m